<!--Projects Container-->
<div id="projects-container" class="container-fluid py-md-5 text-md-center bg-secondary">
  <h1>Projects</h1>
  <!--Indicators-->
  <div id="projects-carousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="false">
    <!--Carousel Inner Start-->
    <div class="carousel-inner">
      <%  for (let i = 0; i < Projects.length; i++) {  %>
        <% let project = Projects[i]; %>
      <div class="carousel-item <%if (i == 0) {%> active <% } %>">
        <a href="/projects/<%=project.id%>">
          <img class="img-fluid" src="/<%=project.images[0].path%>" alt="Card image cap">
        </a>
      </div>
      <% } %>
    </div>
    <!--Carousel Inner End-->
    <!--Carousel Buttons Start-->
    <button class="carousel-control-prev" type="button" data-bs-target="#projects-carousel" data-bs-slide="prev">
      <span class="carousel-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#projects-carousel" data-bs-slide="next">
      <span class="carousel-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
    <!--Carousel Buttons End-->
  </div>
  <!--Carousel-->
</div>
